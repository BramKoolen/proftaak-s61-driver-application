<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/listItemBottomSheetRidesIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/grid_2"
        android:src="@drawable/ic_basic_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/listItemBottomSheetRidesTimelineRec"
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_timeline_middle_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/listItemBottomSheetRidesIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <ImageView
        android:id="@+id/listItemBottomSheetRidesCircleIcon"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_basic_circle"
        app:layout_constraintBottom_toBottomOf="@+id/listItemBottomSheetRidesAddressSubTitle"
        app:layout_constraintEnd_toEndOf="@+id/listItemBottomSheetRidesTimelineRec"
        app:layout_constraintStart_toStartOf="@+id/listItemBottomSheetRidesTimelineRec"
        app:layout_constraintTop_toTopOf="@+id/listItemBottomSheetRidesAddressTitle" />

    <TextView
        android:id="@+id/listItemBottomSheetRidesAddressTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/grid_2"
        android:layout_marginTop="@dimen/grid_2"
        android:textAppearance="@style/TextAppearance.AppTheme.body1.bold"
        app:layout_constraintStart_toEndOf="@+id/listItemBottomSheetRidesTimelineRec"
        app:layout_constraintTop_toTopOf="parent"

        tools:text="Strijp TQ" />

    <TextView
        android:id="@+id/listItemBottomSheetRidesAddressSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/grid_2"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@+id/listItemBottomSheetRidesTimelineRec"
        app:layout_constraintTop_toBottomOf="@+id/listItemBottomSheetRidesAddressTitle"
        tools:text="Achtseweg Zuid 151, 5651 GW Eindhoven" />

    <TextView
        android:id="@+id/listItemBottomSheetRidesAddressTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/grid_2"
        android:layout_marginEnd="@dimen/grid_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="09:30" />

    <TextView
        android:id="@+id/listItemBottomSheetRidesRideKmLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/grid_3"
        android:layout_marginEnd="@dimen/grid_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listItemBottomSheetRidesAddressSubTitle"
        tools:text="5 km" />

    <TextView
        android:id="@+id/listItemBottomSheetRidesRideTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="@dimen/grid_2"
        android:layout_marginBottom="@dimen/grid_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listItemBottomSheetRidesRideKmLabel"
        tools:text="12 min" />

</androidx.constraintlayout.widget.ConstraintLayout>